    %li.first
      = link_to t("navigation.edit"), edit_user_password_path
    %li.last      
      = link_to t("navigation.user.logout"), destroy_user_session_path
  - else
    %li.first
      = link_to t("navigation.user.become_a_member"), new_user_registration_path
    %li.last
      = link_to t("navigation.user.login"), new_user_session_path
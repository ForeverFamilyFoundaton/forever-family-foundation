<%= form_for(@mediumform) do |f| %>
  <% if @mediumform.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mediumform.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @mediumform.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <h2><%= 'Medium Registration for ' + @mediumform.user.full_name %><br></h2>
<br>
  <p>Please <span style="color:red;">answer all questions</span> to the best of you ability and do not leave any blank spaces.<br>  <span style="color:red">If you do not have a specific answer to the question, please type "<b>none</b>" into the field.</span><br/> </p> 
  <p style="font-weight:bold">
  Your responses will determine your eligibility to participate in this program.
  </p>

  <p>You do not need to fill out the form in one sitting and may return to this form as often as necessary until you <span style="color:red">sign and check the signature box for final submission</span>.
  </p>
  <div class='form_section'>
    <h2 class='form_section_header'>Forever Family Foundation Information</h2>
      <div class='form_fields'>
        <table>
          <tr>
            <td style="font-size: 14px;"><b>First Name: </b><%= @mediumform.user.first_name %></td>
            <td style="font-size: 14px;"><b>Middle Name: </b><%= @mediumform.user.middle_name %></td>
            <td style="font-size: 14px;"><b>Last Name: </b><%= @mediumform.user.last_name %></td>
          </tr>
          <tr>
            <td style="font-size: 14px;"><b>Cell Phone: </b><%= @mediumform.user.cell_phone %></td>
            <td style="font-size: 14px;"><b>Home Phone: </b><%= @mediumform.user.home_phone %></td>
            <td style="font-size: 14px;"><b>Work Phone: </b><%= @mediumform.user.work_phone %></td>
          </tr>
          <tr>
            <td style="font-size: 14px;"><b>Email: </b><%= @mediumform.user.email %></td>
          <tr>
            <td style="font-size: 14px;"><b>Address: </b><%= @mediumform.user.address.address %></td>
          </tr>
          <tr>
            <td style="font-size: 14px;"><b>City: </b><%= @mediumform.user.address.city %></td>
            <td style="font-size: 14px;"><b>State: </b><%= @mediumform.user.address.state %></td>
            <td style="font-size: 14px;"><b>Zip: </b><%= @mediumform.user.address.zip %></td>
          </tr>
        </table>
      </div>
  </div>

  <div class='form_section'>
    <h1 class='form_section_header'>Alternative Information</h1>
      <div class='form_fields'>
        <table>
          <tr>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
            <td colspan="1" style="height:0px"></td>
          </tr>
          <tr>
            <td colspan="10" height="0" bgcolor="yellow"><%= check_box_tag :use_professional%>
            <b>Use Professional</b></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Name: </b></td>
            <td colspan="4"><%= f.text_field :professional_name, style: "width:100%", placeholder: "Professional Name"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Address Line 1: </b></td>
            <td colspan="4"><%= f.text_field :professional_address_line1, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Address Line 2: </b></td>
            <td colspan="4"><%= f.text_field :professional_address_line2, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Phone Number: </b></td>
            <td colspan="4"><%= f.text_field :professional_phone_number, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Email: </b></td>
            <td colspan="4"><%= f.text_field :professional_email, style: "width:100%"%></td>
          </tr>
          <br>
          <tr>
            <td colspan="10" height="0" bgcolor="yellow"><%= check_box_tag :use_personal%>
            <b>Use Personal</b></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Name: </b></td>
            <td colspan="4" style="width:50%"><%= f.text_field :personal_name, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Address Line 1: </b></td>
            <td colspan="4"><%= f.text_field :personal_address_line1, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Address Line 2: </b></td>
            <td colspan="4"><%= f.text_field :personal_address_line2, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Phone Number: </b></td>
            <td colspan="4"><%= f.text_field :personal_phone_number, style: "width:100%"%></td>
          </tr>
          <tr>
            <td class="medium_label" colspan="3"><b>Email: </b></td>
            <td colspan="4"><%= f.text_field :personal_email, style: "width:100%"%></td>
          </tr>
        </table>
      </div>
  </div>

  <div class='form_section'>
    <h2 class='form_section_header'>Social Media</h2>
      <div class="form_fields">
        <p><b> Please provide the link(s) (URLs) for each of your social networking accounts below:</b></p>
        <table>
          <tr>
            <td class="medium_label" style="width:0.5%;"><%= f.label :website%></td>
            <td class='sf'><%= f.text_field :website, style: "width:80%", placeholder: "Link to your website" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :facebook %></td>
            <td class='sf'><%= f.text_field :facebook, style: "width:80%", placeholder: "Link to your Facebook page" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :pinterest %></td>
            <td><%= f.text_field :pinterest, style: "width:80%", placeholder: "Link to your Pinterest page" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :instagram%></td>
            <td><%= f.text_field :instagram, style: "width:80%", placeholder: "Link to your Instagram account" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :twitter %></td>
            <td><%= f.text_field :twitter, style: "width:80%", placeholder: "Link to your twitter feed" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :youtube %></td>
            <td><%= f.text_field :youtube, style: "width:80%", placeholder: "Link to your YouTube channel" %></td>
          </tr>
          <tr>
            <td class="medium_label"><%= f.label :blog %></td>
            <td><%= f.text_field :blog, style: "width:80%", placeholder: "Link to your blog" %></td>
          </tr>
        </table>
      </div>
  </div>

  <div class='form_section'>
    <h2 class='form_section_header'>Other Activities</h2>
      <div class="form_fields">
        <p><b>Do you work in any other fields related to Health, Healing, or Spirituality?<br>
        If so, please provide contact information:</b></p>
        <div class="field">
          <%= f.text_area :other_businesses, size: 400, placeholder: "Related field contact information" %>
        </div>
      </div>
  </div>

  <div class='form_section'>
    <h2 class='form_section_header'>Signature</h2>
      <div class="form_fields">
        <%= f.label :signature, "Electronic Signature"%>
        <%= f.text_field :signature, style: "width:50%", placeholder: "Your Full Name"  %>
      </div>
      <div class="form_fields">
        <%= f.check_box :signature_checkbox, id: "sig_check_box", type: 'visible'%>
        <p>I understand that checking this box constitutes <span><b>a legal signature</b></span> confirming that I acknowledge and warrant the truthfulness of the information provided in this document</p>
      </div>
  </div>
  <div class="actions">
   <!--  <%= f.submit %> -->
    <%= render partial: 'shared/form_submit', locals: { text: 'Submit'} %>
  </div>
<% end %>

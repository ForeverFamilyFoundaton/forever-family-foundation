.row
  .col-sm-6
    %h2 Log in
    = simple_form_for resource, as: resource_name, url: session_path(resource_name), wrapper: :input_group do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
        = f.input :password, append: fa_icon(:eye, class: 'toggle-password', data: { toggle: '#user_password'}), required: false, input_html: { autocomplete: "current-password" }
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Log in", class: 'btn btn-primary'
.row
  .col
    = render "devise/shared/links"

%ul.events
  - @events.each do |event|
    .page_section
      %h2.page_section_header= event.times

      - if !event.pic_link.blank?
        .event_pic
          %a= link_to image_tag(event.pic_link, width: "90em"), event.url, target: '_blank'
      %div{class: "inline-block"}
        - if !event.url.blank?
          %center
            %h4= link_to event.title, event.url, target: '_blank'
        - else
          %center
            %h4= link_to event.title, event
        %p= truncate_html event.description, length: 200

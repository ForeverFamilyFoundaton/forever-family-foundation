  </p>
 
  <p>
    <% form.fields_for :promotional_media_upload do |promotional_media_upload_form| -%>
      <%= promotional_media_upload_form.label :attachment, t('promotional_media_upload') -%>
      <br />
      <%= promotional_media_upload_form.file_field :attachment -%>
      <%= promotional_media_upload_form.hidden_field :kind -%>
    <% end -%>
    <br />
    <%= link_to @business.promotional_media_upload.attachment.original_filename,  attachment_admin_business_path(@business, :attachment_id => @business.promotional_media_upload) unless @business.promotional_media_upload.attachment.original_filename.blank? -%>
    <br />
    <%= form.text_area :promotional_media_text -%>
  </p>

  <p>
    <%= form.label :promotional_media_additional_notes, t('additional_notes') -%>
    <br />
    <%= form.text_area :promotional_media_additional_notes, :class => 'simple' -%>

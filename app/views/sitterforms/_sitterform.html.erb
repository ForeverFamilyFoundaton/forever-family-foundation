<%= form_for(@sitterforms) do |f| %>
  <% if @sitterforms.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sitterforms.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @sitterforms.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class='form_section' style="border: 1px solid red;">
  <h2 class='form_section_header'>Additional Information</h2>
    <div class="field">
      <%= f.label :id, "SitterformID" %>
      <%= f.text_field :id, :disabled => true %>
    </div>
    <div class="field">
      <%= f.label :user_id, "User ID" %>
      <%= f.text_field :user_id %>
    </div>

    <div>
      <div class="field">
        <%= f.label :phone %> <br>
        <%= f.text_field :phone %>
      </div>

      <div class="field">
        <%= f.label :cell %> <br>
        <%= f.text_field :cell %>
      </div>
    </div>

    <div class="field">
      <%= f.label :alt_email, "Alternate Email Address" %> <br>
      <%= f.text_field :alt_email %>
    </div>
</div>
<br>
<div class='form_section'>
  <h2 class='form_section_header'>Social Media</h2>
    <div class="field">
      <%= f.label :website%>
      <%= f.text_field :website %>
    </div>
    <div class="field", style="width:300px;'">
      <%= f.label :facebook %>
      <%= f.text_field :facebook %>
    </div>
    <div class="field">
      <%= f.label :pinterest %>
      <%= f.text_field :pinterest %>
    </div>
      <div class="field">
      <%= f.label :instagram %>
      <%= f.text_field :instagram %>
    </div>
    <div class="field">

= simple_form_for @user, :url => user_registration_path do |f|
  = render "shared/error_messages", :target => @user
  = render :partial => "users/form", :locals => { :form => f }
  = f.input :terms_of_use, label: t('labels.terms_of_use_acceptance'), title: 'Terms od Use', as: :boolean, require: true
  = f.input :is_business, label: t('labels.business_reg_acceptance'), title: 'Business Registration', as: :boolean, require: true
  = render :partial => 'shared/form_submit', :locals => { :text => t('register') }


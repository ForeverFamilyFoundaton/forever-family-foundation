= render 'layouts/header'

%body
  #layout

    #container

      #sidebar
        = render 'shared/nav/user_nav'

        = render 'shared/nav/site_nav'
        
        = render 'shared/partners'
            
      #content

        = render 'shared/nav/global_nav'
        
        #content_main
          - if notice
            %p.notice= notice
          - if alert
            %p.alert= alert

          %h1= @cms_page.title
          =blog @cms_page.body
          = yield

    #footer_spacer
  = render 'layouts/footer'